{
	"compilerOptions": {
		"module": "CommonJS", // Ensure compatibility with Node.js
		"target": "ES2020", // Use modern JavaScript
		"outDir": "./dist", // Output directory
		"rootDir": "./src", // Root directory for source files
		"strict": true,
		"esModuleInterop": true, // Allows compatibility between CommonJS and ES Modules
		"skipLibCheck": true, // Skip type checking for third-party modules
		"resolveJsonModule": true, // Enable importing JSON files
		"emitDecoratorMetadata": true, // Required for Sequelize
		"experimentalDecorators": true, // Enable decorators for Sequelize
		"forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
		"baseUrl": ".", // Base directory for module resolution
		"paths": {
			"@/*": ["./src/*"] // Alias for imports
		}
	},
	"include": ["src/**/*.ts"], // Include all TypeScript files in the src directory
	"exclude": ["node_modules", "dist"] // Exclude these directories
}
